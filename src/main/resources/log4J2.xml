<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="com.n3.aldi.tool.selenium.base" level="warn">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="gui.storefront" level="error">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="gui.storefront" level="info">
			<AppenderRef ref="Console"/>
		</Logger>
		<Root level="info">
			<AppenderRef ref="Console"/>
		</Root>
	</Loggers>
</Configuration>